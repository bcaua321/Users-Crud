@model Usuario
@{
    ViewBag.Subtitulo = "Cadastro";
}

<h1 class="text-primary">Cadastro de Usu√°rio</h1>
<form method="post" class="w-25">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" value="@Model.Nome">
    </div>
    <div class="form-group">
        <label asp-for="Email">E-mail</label>
        <input type="text" class="form-control" asp-for="Email" value="@Model.Email">
    </div>
    <div class="mt-3">
        <a href="/Home/Usuarios" class="btn btn-light">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>

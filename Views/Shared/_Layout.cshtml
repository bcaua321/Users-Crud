@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var actionAtual = ViewContext.RouteData.Values["action"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <title>@ViewBag.Subtitulo</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light"  style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <h3 class="title">Cadastro de Usu√°rios</h3>
            <div class="collapse navbar-collapse" id="navbarNav"></div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(actionAtual == "Index" ? "active" : "")" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(actionAtual == "Usuarios" ? "active" : "")" asp-action="Usuarios">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(actionAtual == "Cadastrar" ? "active" : "")" asp-action="Cadastrar">Cadastro</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        Todos os direitos reservados<br>
        @RenderSection("Footer", false)
    </div>
    
    @RenderSection("Scripts", false)
</body>
</html>